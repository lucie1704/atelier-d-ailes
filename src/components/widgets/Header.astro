---
import Logo from '~/components/widgets/Logo.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  position?: string;
  isSticky?: boolean;
}

const { links = [], actions = [], position = 'center', isSticky = true } = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;

const showAnnouncement = import.meta.env.PUBLIC_ENABLE_ANNOUNCEMENT === 'true';
const baseClasses =
  'items-center w-full md:w-auto hidden md:flex md:mx-5 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center';
const announcementClasses = showAnnouncement ? 'mt-8 md:mt-0' : '';
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky },
    'top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  id="header"
>
  <div class="absolute inset-0"></div>

  <slot name="announcement" />

  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full max-w-7xl',
      {
        'md:flex md:justify-between': position !== 'center',
      },
      {
        'md:grid md:grid-cols-3 md:items-center': position === 'center',
      },
    ]}
  >
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a class="flex items-center" href={getHomePermalink()}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>

    <nav class={`${baseClasses} ${announcementClasses}`} aria-label="Main navigation">
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-[0.9375rem] tracking-[0.01rem] font-medium md:justify-center mt-1 md:mt-0"
      >
        {
          links.map(({ text, href }) => (
            <li
              class:list={[
                'mx-2 md:mx-0 px-4 py-5 md:py-3 transition-colors duration-200 border-b border-black/10 md:border-primary md:border-0 first:border-t first:md:border-t-0',
                {
                  'text-primary font-semibold md:border-b-2 md:border-primary': href === currentPath,
                },
              ]}
            >
              <a class="hover:text-link flex items-center whitespace-nowrap transition-colors duration-200" href={href}>
                {text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
        'hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end',
      ]}
    >
      <div class="items-center flex justify-center w-full md:w-auto">
        {
          actions?.length ? (
            <span>
              {actions.map((btnProps) => (
                <Button
                  {...btnProps}
                  class="py-3 px-6 text-md md:py-2.5 md:px-5.5 md:text-sm font-semibold shadow-none w-auto"
                />
              ))}
            </span>
          ) : null
        }
      </div>
    </div>
  </div>
</header>
