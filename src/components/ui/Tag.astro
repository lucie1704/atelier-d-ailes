---
type Variant = 'primary' | 'success' | 'warning' | 'danger' | 'neutral';

interface Props {
  variant?: Variant;
}

const { variant = 'primary' } = Astro.props;

const baseClasses = 'whitespace-nowrap inline-flex items-center rounded-md px-2 py-1 text-sm font-semibold max-w-max';

const variants: Record<Variant, string> = {
  primary: 'bg-primary/5 text-primary shadow-[inset_0_0_0_1px_rgb(221_104_39/0.2)]',
  success: 'bg-green-100/20 text-green-800 shadow-[inset_0_0_0_1px_rgb(22_163_74/0.2)]',
  warning: 'bg-yellow-100/20 text-yellow-800 shadow-[inset_0_0_0_1px_rgb(234_179_8/0.2)]',
  danger: 'bg-red-100/20 text-red-900 shadow-[inset_0_0_0_1px_rgb(220_38_38/0.2)]',
  neutral: 'bg-gray-100/20 text-gray-800 shadow-[inset_0_0_0_1px_rgb(107_114_128/0.2)]',
};
---

<span class={`${baseClasses} ${variants[variant]}`}>
  <slot />
</span>
