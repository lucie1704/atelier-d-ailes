---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import ShopStatus from '~/components/widgets/ShopStatus.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- Hero Title -->
  <Hero
    tagline="Contact"
    title="Prendre rendez-vous"
    subtitle="Pour toute demande de révision, réparation ou conseil"
  />

  <!-- Contact cards -->
  <Features2
    items={[
      {
        title: 'Par téléphone',
        description: '(+33) 06 81 30 85 58',
        icon: 'tabler:phone',
        callToAction: {
          text: 'Téléphoner',
          href: 'tel:+33681308558',
          variant: 'secondary',
          target: '_blank',
        },
      },
      {
        title: 'Adresse',
        description: '23 Hautefeuille, 77510 Sablonnières',
        icon: 'tabler:map-pin',
        callToAction: {
          text: "S'y rendre",
          href: "https://www.google.com/maps/dir/?api=1&destination=Atelier+d'Ailes",
          variant: 'secondary',
          target: '_blank',
        },
      },
      {
        title: "Horaires d'ouverture",
        description: 'Du mardi au samedi, de 9h à 18h',
        icon: 'tabler:calendar',
        slotContent: {
          Component: ShopStatus,
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
</Layout>
