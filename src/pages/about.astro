---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: "Les services de l'atelier",
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    tagline="Les services de l'atelier"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  />

  <!-- Sections avec ancres -->
  <section id="repair" class="py-20 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-4">Réparation de parapente et paramoteur</h2>
  </section>

  <section id="maintenance" class="py-20 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-4">Contrôle et entretien</h2>
  </section>

  <section id="reserve-parachute-packing" class="py-20 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-4">Pliage de parachute de secours</h2>
  </section>
</Layout>
